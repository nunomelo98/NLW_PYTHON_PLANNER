        "post": {
          "summary": "Cria uma nova viagem",
          "description": "",
          "parameters": [
            {
              "in": "body",
              "name": "body",
              "description": "Detalhes da viagem",
              "required": true,
              "schema": {
                "type": "object",
                "properties": {
                  "destination": {
                    "type": "string"
                  },
                  "start_date": {
                    "type": "string",
                    "format": "date"
                  },
                  "end_date": {
                    "type": "string",
                    "format": "date"
                  },
                  "emails_to_invite": {
                    "type": "array",
                    "items": [
                      {
                        "type": "string"
                      },
                      {
                        "type": "string"
                      }
                    ]
                  }
                },
                "required": ["destination", "start_date", "end_date","emails_to_invite"]
              }
            }
          ],
          "responses": {
            "201": {
              "description": "Viagem criada com sucesso"
            }
          }
        }
